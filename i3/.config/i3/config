# Set mod key (Mod1 = alt, Mod4 = super)
set $mod Mod4
set $terminal alacritty

###
### MOVEMENT KEYBINDINGS
###

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Move container to a specific monitor
bindsym $mod+Shift+a exec --no-startup-id /home/daniel/.bin/MoveToMonitor HDMI-0
bindsym $mod+Shift+s exec --no-startup-id /home/daniel/.bin/MoveToMonitor DP-2 
bindsym $mod+Shift+d exec --no-startup-id /home/daniel/.bin/MoveToMonitor HDMI-1
bindsym $mod+Shift+w exec --no-startup-id /home/daniel/.bin/MoveToMonitor DP-0

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+f fullscreen toggle 

###
### CONTROL KEYBINDINGS
###

bindsym $mod+Shift+q kill
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+space exec --no-startup-id dmenu_run

# Volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume @DEFAULT_SINK@ +2% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume @DEFAULT_SINK@ -2% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl -- set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Color class                border   background text     indicator child_border
client.focused               #333333  #000000    #000000  #333333   #333333
client.unfocused             #000000  #000000    #000000  #000000   #000000
client.focused_inactive      #000000  #000000    #000000  #000000   #000000
client.urgent                #000000  #000000    #000000  #000000   #000000
client.placeholder           #000000  #000000    #000000  #000000   #000000


gaps outer 5px
gaps inner 5px

# Key bindings for launching terminal and reloading i3
bindsym $mod+Return exec $terminal
bindsym $mod+Shift+r reload
# bindsym $mod+Shift+e exit

focus_follows_mouse no

# Start i3bar (status bar)

bar {
    status_command i3status
    tray_output primary
}


# Default workspace layout
workspace_layout default

# Window floating behavior
for_window [class="^.*"] border pixel 1
# default_border pixel 0
exec_always feh --bg-fill /home/daniel/Pictures/wallpaper.jpg
exec_always unclutter -grab
exec_always picom --config /home/daniel/.config/picom/picom.conf
